<Window x:Class="СompressionData.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Compression Vector quantization" Height="350" Width="525">
    <Grid>
        <Button x:Name="bCompression" Content="Сжатие" HorizontalAlignment="Right" Margin="0,0,165.4,11.4" VerticalAlignment="Bottom" Width="75" Click="bCompression_Click"/>
        <Grid Margin="10,10,10.4,38.4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Image x:Name="imageOriginal" Margin="0,0,9.8,0"/>
            <Image x:Name="imageCompress" Grid.Column="1" Margin="10.2,0,-0.4,0"/>
        </Grid>
        <Button x:Name="bOpen" Content="Открыть" Margin="0,0,258.4,11.4" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="bOpen_Click"/>
        <Button x:Name="bSave" Content="Сохранить" HorizontalAlignment="Right" Margin="0,0,69.4,11.4" VerticalAlignment="Bottom" Width="75" Click="bSave_Click"/>
        <ComboBox x:Name="cbChooseMethod" HorizontalAlignment="Left" Margin="10,0,0,11.4" VerticalAlignment="Bottom" Width="153">
            <ComboBoxItem Content="Вектороное квантование"/>
            <ComboBoxItem Content="Дискретное косинусное преобразование"/>
        </ComboBox>
    </Grid>
</Window>
